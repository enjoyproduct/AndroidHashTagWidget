<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ScrollView
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clipToPadding="false"
        android:fillViewport="false"
        android:overScrollMode="never"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:scrollbars="none">

        <android.support.v7.widget.CardView style="@style/Card">

            <LinearLayout style="@style/CardContainer">

                <TextView
                    style="@style/CardTitle"
                    android:text="@string/title_styling" />

                <FrameLayout style="@style/Section.Container">

                    <TextView
                        style="@style/Section.Text"
                        android:text="@string/section_style_colors" />
                </FrameLayout>

                <com.greenfrvr.hashtagview.HashtagView
                    android:id="@+id/hashtags1"
                    style="@style/HashtagView"
                    app:rowMode="stretch"
                    app:tagBackground="@color/teal"
                    app:tagForeground="@drawable/flat_button_light"
                    app:tagPaddingBottom="@dimen/padding_vertical"
                    app:tagPaddingLeft="@dimen/padding_vertical"
                    app:tagPaddingRight="@dimen/padding_vertical"
                    app:tagPaddingTop="@dimen/padding_vertical"
                    app:tagTextColor="@color/text" />

                <FrameLayout style="@style/Section.Container">

                    <TextView
                        style="@style/Section.Text"
                        android:text="@string/section_style_spans" />
                </FrameLayout>

                <com.greenfrvr.hashtagview.HashtagView
                    android:id="@+id/hashtags2"
                    style="@style/HashtagView"
                    app:tagBackground="@drawable/item_bg_3"
                    app:tagForeground="@drawable/flat_button_light"
                    app:tagPaddingBottom="@dimen/padding_vertical"
                    app:tagPaddingLeft="@dimen/padding_horizontal"
                    app:tagPaddingRight="@dimen/padding_horizontal"
                    app:tagPaddingTop="@dimen/padding_vertical"
                    app:tagTextColor="#E5E5E5" />

                <com.greenfrvr.hashtagview.HashtagView
                    android:id="@+id/hashtags3"
                    style="@style/HashtagView"
                    app:tagBackground="@drawable/item_bg_2"
                    app:tagForeground="@drawable/flat_button_light"
                    app:tagPaddingBottom="@dimen/padding_vertical"
                    app:tagPaddingLeft="@dimen/padding_horizontal"
                    app:tagPaddingRight="@dimen/padding_horizontal"
                    app:tagPaddingTop="@dimen/padding_vertical"
                    app:tagTextColor="#E5E5E5" />

                <FrameLayout style="@style/Section.Container">

                    <TextView
                        style="@style/Section.Text"
                        android:text="@string/section_style_drawables" />
                </FrameLayout>

                <com.greenfrvr.hashtagview.HashtagView
                    android:id="@+id/hashtags4"
                    style="@style/HashtagView"
                    app:rowMode="stretch"
                    app:tagBackground="@drawable/item_bg_1"
                    app:tagDrawableLeft="@drawable/ic_github_circle_white_18dp"
                    app:tagDrawablePadding="4dp"
                    app:tagForeground="@drawable/flat_button_light"
                    app:tagPaddingBottom="@dimen/padding_vertical"
                    app:tagPaddingLeft="@dimen/padding_horizontal"
                    app:tagPaddingRight="@dimen/padding_horizontal"
                    app:tagPaddingTop="@dimen/padding_vertical"
                    app:tagTextColor="#E5E5E5" />

                <FrameLayout style="@style/Section.Container">

                    <TextView
                        style="@style/Section.Text"
                        android:text="@string/section_style_selection_drawables" />
                </FrameLayout>

                <com.greenfrvr.hashtagview.HashtagView
                    android:id="@+id/hashtags5"
                    style="@style/HashtagView"
                    app:rowGravity="center"
                    app:rowMode="wrap"
                    app:selectionMode="true"
                    app:tagBackground="@drawable/item_bg_1"
                    app:tagDrawablePadding="4dp"
                    app:tagDrawableRight="@drawable/ic_close_white_18dp"
                    app:tagForeground="@drawable/flat_button_light"
                    app:tagPaddingBottom="@dimen/padding_vertical"
                    app:tagPaddingLeft="8dp"
                    app:tagPaddingRight="@dimen/padding_horizontal"
                    app:tagPaddingTop="@dimen/padding_vertical"
                    app:tagSelectedDrawableRight="@drawable/ic_done_white_18dp"
                    app:tagTextColor="#E5E5E5" />

                <com.greenfrvr.hashtagview.HashtagView
                    android:id="@+id/hashtags6"
                    style="@style/HashtagView"
                    app:rowGravity="center"
                    app:rowMode="stretch"
                    app:selectionMode="true"
                    app:tagBackground="@drawable/item_bg_1"
                    app:tagForeground="@drawable/flat_button_light"
                    app:tagPaddingBottom="@dimen/padding_vertical"
                    app:tagPaddingLeft="@dimen/padding_horizontal"
                    app:tagPaddingRight="@dimen/padding_horizontal"
                    app:tagPaddingTop="@dimen/padding_vertical"
                    app:tagTextColor="#E5E5E5" />

                <include layout="@layout/layout_buttons" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>
</FrameLayout>