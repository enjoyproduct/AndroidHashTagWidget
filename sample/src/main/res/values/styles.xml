<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="FlatButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/flat_button_height</item>
        <item name="android:minWidth">@dimen/flat_button_width</item>
        <item name="android:paddingLeft">@dimen/flat_button_padding</item>
        <item name="android:paddingRight">@dimen/flat_button_padding</item>
        <item name="android:textSize">@dimen/regular_text</item>
        <item name="android:background">@drawable/flat_button_dark</item>
    </style>

    <style name="Section"/>

    <style name="Section.Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="Section.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/section_bg</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/regular_text</item>
    </style>

    <style name="CardContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="CardTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">48dp</item>
        <item name="android:paddingRight">48dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/card_title</item>
    </style>

    <style name="HashtagView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="tagTextSize">@dimen/regular_text</item>
    </style>

</resources>
